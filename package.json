{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun --watch src/server.ts",
    "build":"tsc",
    "test": "vitest",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:staged":"vitest related --passWithNoTests",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky",
    "postinstall": "bun run prepare"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/bun": "latest",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.7",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "bun run test:staged",
      "prettier --write"
    ]
  }
}
