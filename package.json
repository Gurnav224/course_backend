{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun --hot src/server.ts",
    "build": "tsc",
    "test": "bunx vitest",
    "test:watch": "bunx vitest",
    "lint": "bunx biome lint --write",
    "format": "bunx biome format --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@eslint/js": "^9.30.0",
    "@types/bun": "latest",
    "@types/express": "^5.0.3",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.7",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "import-sort-parser-typescript": "^6.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.0",
    "ts-plugin-sort-import-suggestions": "^1.0.4",
    "valibot": "^1.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "bunx biome lint --write",
      "bunx biome format --write",
      "bun run test:staged"
    ],
    "**/__tests__/**/*.test.ts": [
      "bun run test:staged"
    ]
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "eslint",
      "options": {}
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "eslint",
      "options": {}
    }
  }
}